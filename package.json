{
  "name": "@vwinterdev/env-validator-vite",
  "version": "2.0.0",
  "description": "Vite plugin for validating environment variables with built-in validators",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "dev:playground": "pnpm vite -c playground/vite.config.ts"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "tsdown": "^0.15.9",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.6",
    "zod": "^4.1.12"
  },
  "keywords": [
    "vite",
    "plugin",
    "env",
    "environment",
    "variables",
    "validation",
    "env-validator",
    "vite-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vwinterdev/env-validator-vite.git"
  },
  "author": "vwinterdev",
  "homepage": "https://github.com/vwinterdev/env-validator-vite#readme",
  "bugs": {
    "url": "https://github.com/vwinterdev/env-validator-vite/issues"
  },
  "dependencies": {
    "@poppinss/cliui": "^6.5.0",
    "@poppinss/validator-lite": "^2.1.2"
  }
}
